            <div class="col-6">
                <div class="text-center">
                    <h3>Edit</h3>
                    <EditForm Context="EditSkill" Model="editSkill" OnValidSubmit="UpdateSkillAsync" class="edit-form mt-5">
                            @if (skills == null)
                            {
                                <p>Loading...</p>
                            }
                            else
                            {
                                @foreach (var skill in skills)
                                {
                                <button class="btn-primary" onclick="@( () => SelectEditSkill(skill) )">@skill.Name</button>
                                } 
                            }
                        <div>
                            <label>Name:</label>
                            <InputText class="form-control" @bind-Value="editSkill.Name"></InputText>
                        </div>
                        <div>
                            <label>Progress</label>
                            <InputNumber class="form-control" @bind-Value="editSkill.Progress"></InputNumber>
                        </div>
                        <button class="mt-5 btn-primary" type="submit">Update</button>
                        <button class="mt-5 btn-Danger" onclick="@( () => DeleteSkillAsync() )">Delete</button>
                    </EditForm>

                </div>
